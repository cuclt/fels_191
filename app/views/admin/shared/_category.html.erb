<div class="col-sm-9">
  <div class="row box">
    <h3><%= t "categories" %></h3>
    <div class="table-bordered">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t "categories" %></th>
            <th colspan="3"><%= t "title_category" %></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>#<%= category.id %></td>
              <td><%= category.title %></td>
              <td><%= link_to t("edit"), "#", class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to t("delete"), "#", class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="pull-right">
      <%= will_paginate @categories %>
    </div>
  </div>
</div>
