<div class="col-sm-12">
  <ul class="breadcrumb">
    <li><%= link_to t("home"), admin_root_path %></li>
    <li><%= link_to t("categories"), admin_categories_path %></li>
    <li><%= t "questions" %></li>
  </ul>
</div>
<%= render "admin/layouts/left_bar" %>
<div class="col-sm-9">
  <div class="row box">
    <div class="col-sm-12">
      <h3 class="pull-left"><%= t "questions" %></h3>
      <div class=pull-right>
        <%= render "form_search" %>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="table-bordered">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= t "questions" %></th>
              <th colspan="3"><%= t "question_name" %></th>
            </tr>
          </thead>
          <tbody id="result_search">
            <%= render "question" %>
          </tbody>
        </table>
      </div>
      <div class="pull-right">
        <%= will_paginate @questions %>
      </div>
    </div>
  </div>
</div>
